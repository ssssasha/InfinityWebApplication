@{
}
@model IEnumerable<AutoShowWebApplication.Models.User>
@{
    ViewBag.Title = "Список користувачів";
}
<div style="padding:100px 0" class="container">


    <a asp-action="Create">Додати користувача</a>

    <table class="table">
        <tr><th>Email</th><th>Рік</th><th></th></tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Year</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Редагувати</a>
                        <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Змінити пароль</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Видалити
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>