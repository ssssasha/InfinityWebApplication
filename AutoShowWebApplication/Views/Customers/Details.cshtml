@model AutoShowWebApplication.Customer
    <div style="padding:100px 0" class="container">

        @{
            ViewData["Title"] = "Details";
        }

        <h1>Деталі</h1>

        <div>
            <h4>Клієнт</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telephone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telephone)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.CustomerId">Редагувати</a> |
            <a asp-action="Index">Повернутися до списку</a>
        </div>
</div>