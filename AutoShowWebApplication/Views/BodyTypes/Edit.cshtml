@model AutoShowWebApplication.BodyType
    <div style="padding:100px 0" class="container">

        @{
            ViewData["Title"] = "Edit";
        }

        <h1>Редагування</h1>
        <div style="padding:100px 0" class="container">

            <h4>Тип кузова</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="BodyTypeId" />
                        <div class="form-group">
                            <label asp-for="BodyTypeNames" class="control-label"></label>
                            <input asp-for="BodyTypeNames" class="form-control" />
                            <span asp-validation-for="BodyTypeNames" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Зберегти" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Повернутися до списку</a>
            </div>
        </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
        </div>