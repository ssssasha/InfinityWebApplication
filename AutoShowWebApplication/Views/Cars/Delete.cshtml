@model AutoShowWebApplication.Car
    <div style="padding:100px 0" class="container">
        @{
            ViewData["Title"] = "Delete";
        }

        <h1>Видалення</h1>

        <h3>Ви впевнені, що хочете видалити?</h3>
        <div>
            <h4>Автомобіль</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GraduationYear)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GraduationYear)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BodyType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BodyType.BodyTypeNames)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Color.ColorName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Drive)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Drive.DriveType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Model)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Model.ModelName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                @if (Model.Image != null)
                {
                    <dd class="col-sm-10">
                        <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
                    </dd>
}
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="CarId" />
                <input type="submit" value="Видалити" class="btn btn-danger" /> |
                <a asp-action="IndexAuto">Повернутися до списку</a>
            </form>
        </div>
        </div>