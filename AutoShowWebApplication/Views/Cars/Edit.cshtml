@model AutoShowWebApplication.Car
<div style="padding:100px 0" class="container">
    @{
        ViewData["Title"] = "Edit";
    }

    <h1>Редагування</h1>

    <h4>Автомобіль</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" asp-controller="Cars" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CarId" />
                <div class="form-group">
                    <label asp-for="ModelId" class="control-label"></label>
                    <select asp-for="ModelId" class="js-example-placeholder-single js-states form-control" asp-items="ViewBag.ModelId"></select>
                    <span asp-validation-for="ModelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GraduationYear" class="control-label"></label>
                    <input asp-for="GraduationYear" class="form-control" />
                    <span asp-validation-for="GraduationYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BodyTypeId" class="control-label"></label>
                    <select asp-for="BodyTypeId" class="js-example-placeholder-single js-states form-control" asp-items="ViewBag.BodyTypeId"></select>
                    <span asp-validation-for="BodyTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ColorId" class="control-label"></label>
                    <select asp-for="ColorId" class="js-example-placeholder-single js-states form-control" asp-items="ViewBag.ColorId"></select>
                    <span asp-validation-for="ColorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DriveId" class="control-label"></label>
                    <select asp-for="DriveId" class="js-example-placeholder-single js-states form-control" asp-items="ViewBag.DriveId"></select>
                    <span asp-validation-for="DriveId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" type="file" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="IndexAuto">Повернутися до списку</a>
    </div>

    @section Scripts {
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />

        <script>
            $(".js-example-placeholder-single").select2({
                placeholder: {
                    id: '-1', // the value of the option
                    text: 'Select an option'
                }
            });
        </script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>