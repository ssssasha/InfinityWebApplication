@model AutoShowWebApplication.Order
    <div style="padding:100px 0" class="container">
        @{
            ViewData["Title"] = "Details";
        }

        <h1>Деталі</h1>

        <div>
            <h4>Замовлення</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Manager)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Manager.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Model)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Model.ModelName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderType.OrderName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.OrderId">Редагувати</a> |
            <a asp-action="Index">Повернутися до списку</a>
        </div>
        </div>