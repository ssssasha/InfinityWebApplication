@model AutoShowWebApplication.Color

@{
    ViewData["Title"] = "Details";
}

<h1>Деталі</h1>

<div>
    <h4>Колір</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ColorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ColorName)
        </dd>
    </dl>
</div>
@if (User.IsInRole("admin"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ColorId">Редагувати</a> |
        <a asp-action="Index">Повернутися до списку</a>
    </div>
}
@if (!User.IsInRole("admin"))
{
    <div>
       
        <a asp-action="Index">Повернутися до списку</a>
    </div>
}